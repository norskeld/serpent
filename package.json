{
  "name": "@nrsk/serpent",
  "version": "1.0.0",
  "description": "Yet another TypeScript library starter with conventional goodies and automatic semantic releases.",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "fmt:prettier": "prettier --write \"**/*.{js,ts,json}\"",
    "fmt:lint": "eslint --fix --ext .js,.ts .",
    "prebuild": "rimraf dist",
    "prepare": "is-ci || husky install",
    "release": "npx semantic-release",
    "release:dry": "npx semantic-release --dry-run",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/norskeld/serpent.git"
  },
  "keywords": [
    "starter",
    "library",
    "typescript",
    "jest",
    "eslint",
    "prettier",
    "husky",
    "lint-staged",
    "commitlint",
    "semantic-release"
  ],
  "author": {
    "name": "Vladislav Mamon",
    "email": "hello@vm.codes"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/norskeld/serpent/issues"
  },
  "homepage": "https://github.com/norskeld/serpent#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@nrsk/config-conventional": "^1.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^28.1.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^12.4.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "commitlint": {
    "extends": [
      "@nrsk/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
