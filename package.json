{
  "name": "@arcdelta/serpent",
  "version": "1.0.0",
  "description": "Yet another TypeScript library starter with conventional goodies and automatic semantic releases.",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "cz": "git-cz",
    "build": "tsc",
    "build:watch": "tsc -w",
    "prebuild": "rimraf dist",
    "test": "jest",
    "test:coverage": "jest --coverage=true",
    "test:watch": "jest --watch",
    "test:init": "jest --init",
    "style": "npm run style:format && npm run style:lint",
    "style:format": "prettier --write \"**/*.{js,ts,json}\"",
    "style:lint": "eslint src --ext .js,.ts --fix",
    "release": "npx semantic-release",
    "release:dry": "npx semantic-release --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcdelta/serpent.git"
  },
  "keywords": [
    "starter",
    "library",
    "typescript",
    "jest",
    "eslint",
    "prettier",
    "husky",
    "lint-staged",
    "commitizen",
    "commitlint",
    "semantic-release",
    "editorconfig",
    "circleci"
  ],
  "author": {
    "name": "Vladislav Mamon",
    "email": "hello@arcdelta.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arcdelta/serpent/issues"
  },
  "homepage": "https://github.com/arcdelta/serpent#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^12.12.44",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
